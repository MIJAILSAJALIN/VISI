@{
    ViewData["Title"] = "Pantalla de Clientes";
}
<h1>@ViewData["Clientes"]</h1>

<h2> Módulo de Clientes</h2>
<br />

<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title></title>
    <style type="text/css">
#aaa {
  <!-- background-image: url("/imagenes/visi.png"); -->
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-position: center center;
  background-color: #b5bbb2;
}

</style></head>
<body style="background-color: #b5bbb2;">
    <p>

        <form asp-controller="Clientes" asp-action="Index" asp-route-id="buscador" method="get">
            <button type="submit" class="btn btn-primary mb-3">Buscar por cualquier campo</button>
            <input class="form-control mb-2" style="width:200px;height:20px;" type="text" size="20" width="20" autofocus id="buscador" name="buscador" />           
        </form>
        <a asp-controller="Clientes" asp-action="Alta_Cliente" class="btn btn-primary mb-3">Nuevo Cliente</a>

    </p>
  </body>
</html>
